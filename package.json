{
  "name": "grownext",
  "version": "0.1.0",
  "private": true,
  "packageManager": "pnpm@8.15.7",
  "engines": {
    "node": ">=20.11.0"
  },
  "scripts": {
    "dev": "node ./scripts/dev.mjs",
    "dev:identity": "pnpm --filter @ma/identity dev",
    "dev:portal": "pnpm --filter @ma/portal dev",
    "dev:tasks": "pnpm --filter @ma/tasks dev",
    "dev:worker": "pnpm --filter @ma/worker dev",
    "dev:turbo": "turbo run dev --parallel",
    "install:identity": "pnpm install --filter \"@ma/identity...\"",
    "install:portal": "pnpm install --filter \"@ma/portal...\"",
    "install:tasks": "pnpm install --filter \"@ma/tasks...\"",
    "build": "turbo run build",
    "build:identity": "pnpm --filter \"@ma/identity...\" build",
    "build:portal": "pnpm --filter \"@ma/portal...\" build",
    "build:tasks": "pnpm --filter \"@ma/tasks...\" build",
    "build:worker": "pnpm --filter \"@ma/worker...\" build",
    "typecheck": "turbo run typecheck",
    "lint": "turbo run lint",
    "test": "turbo run test --filter=!@ma/e2e",
    "test:identity": "pnpm --filter @ma/identity test",
    "test:portal": "pnpm --filter @ma/portal test",
    "test:tasks": "pnpm --filter @ma/tasks test",
    "test:worker": "pnpm --filter @ma/worker test",
    "e2e:test": "pnpm --filter @ma/e2e test",
    "e2e:test:debug": "pnpm --filter @ma/e2e run test:debug",
    "e2e:test:ui": "pnpm --filter @ma/e2e run test:ui",
    "e2e:codegen": "pnpm --filter @ma/e2e run codegen",
    "db:push": "pnpm --filter @ma/db run db:push",
    "db:migrate": "pnpm --filter @ma/db run db:migrate",
    "db:seed": "pnpm --filter @ma/db run db:seed",
    "tasks-db:push": "pnpm --filter @ma/tasks-db run db:push",
    "tasks-db:migrate": "pnpm --filter @ma/tasks-db run db:migrate",
    "tasks-db:seed": "pnpm --filter @ma/tasks-db run db:seed",
    "seed": "pnpm db:seed && pnpm tasks-db:seed",
    "worker:enqueue": "pnpm --filter @ma/worker run enqueue"
  },
  "dependencies": {},
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^7.6.0",
    "@typescript-eslint/parser": "^7.6.0",
    "@types/node": "^20.11.27",
    "@vitest/coverage-v8": "^1.5.0",
    "dotenv": "^16.4.5",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-jsx-a11y": "^6.8.0",
    "eslint-plugin-react": "^7.34.1",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-tailwindcss": "^3.13.0",
    "eslint-import-resolver-typescript": "^3.6.1",
    "prettier": "^3.2.5",
    "turbo": "^2.0.3",
    "typescript": "^5.4.5",
    "vitest": "^1.5.0"
  }
}
