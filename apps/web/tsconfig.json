{
  "extends": "../../packages/config/tsconfig.react.json",
  "compilerOptions": {
    "baseUrl": ".",
    "skipLibCheck": true,
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "paths": {
      "@ma/core": ["../../packages/core/src/index.ts"],
      "@ma/core/*": ["../../packages/core/src/*"],
      "@ma/contracts": ["../../packages/contracts/src/index.ts"],
      "@ma/contracts/*": ["../../packages/contracts/src/*"],
      "@ma/db": ["../../packages/db/src/index.ts"],
      "@ma/db/*": ["../../packages/db/src/*"],
      "@ma/ui": ["../../packages/ui/src/index.ts"],
      "@ma/ui/*": ["../../packages/ui/src/*"],
      "@/components/*": ["./components/*"],
      "@/lib/*": ["./lib/*"]
    },
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
