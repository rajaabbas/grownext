{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "moduleSuffixes": ["", ".ts", ".tsx", ".d.ts", ".js"],
    "declaration": true,
    "emitDeclarationOnly": false,
    "noEmit": false,
    "declarationMap": true,
    "outDir": "dist",
    "composite": true,
    "tsBuildInfoFile": "./tsconfig.build.tsbuildinfo"
  },
  "include": [
    "src"
  ],
  "exclude": [
    "**/*.test.ts",
    "**/*.test.tsx",
    "**/*.spec.ts",
    "**/*.spec.tsx"
  ],
  "references": [
    {
      "path": "../contracts/tsconfig.build.json"
    }
  ]
}
