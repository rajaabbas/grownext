{
  "name": "@ma/identity-client",
  "version": "0.1.0",
  "private": false,
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "default": "./dist/index.js"
    },
    "./package.json": "./package.json"
  },
  "files": [
    "dist",
    "README.md"
  ],
  "sideEffects": false,
  "publishConfig": {
    "access": "restricted"
  },
  "scripts": {
    "dev": "tsc -p tsconfig.build.json --watch --preserveWatchOutput",
    "build": "tsc -b tsconfig.build.json && node ../../scripts/flatten-dist.mjs dist && node ../../scripts/fix-esm-extensions.mjs dist",
    "typecheck": "tsc --noEmit",
    "lint": "eslint \"src/**/*.ts\"",
    "test": "vitest run"
  },
  "dependencies": {
    "@ma/contracts": "workspace:*",
    "jose": "^5.2.3",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/node": "^20.11.27",
    "@ma/config": "workspace:*",
    "typescript": "^5.4.5",
    "vitest": "^1.5.0"
  }
}
