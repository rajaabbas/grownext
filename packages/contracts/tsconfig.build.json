{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "moduleSuffixes": ["", ".ts", ".tsx", ".d.ts", ".js"],
    "declaration": true,
    "emitDeclarationOnly": false,
    "noEmit": false,
    "declarationMap": true,
    "outDir": "dist",
    "composite": true,
    "rootDir": "src"
  },
  "include": [
    "src"
  ],
  "exclude": [
    "**/*.test.ts",
    "**/*.test.tsx",
    "**/*.spec.ts",
    "**/*.spec.tsx"
  ]
}
