{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "lib": [
      "ES2022",
      "DOM",
      "DOM.Iterable"
    ],
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": false,
    "isolatedModules": true,
    "resolveJsonModule": true,
    "noEmit": true,
    "types": [
      "node"
    ],
    "paths": {
      "@ma/core": ["../core/src/index.ts", "../../packages/core/src/index.ts"],
      "@ma/core/*": ["../core/src/*", "../../packages/core/src/*"],
      "@ma/contracts": ["../contracts/src/index.ts", "../../packages/contracts/src/index.ts"],
      "@ma/contracts/*": ["../contracts/src/*", "../../packages/contracts/src/*"],
      "@ma/db": ["../db/src/index.ts", "../../packages/db/src/index.ts"],
      "@ma/db/*": ["../db/src/*", "../../packages/db/src/*"],
      "@ma/tasks-db": ["../tasks-db/src/index.ts", "../../packages/tasks-db/src/index.ts"],
      "@ma/tasks-db/*": ["../tasks-db/src/*", "../../packages/tasks-db/src/*"],
      "@ma/identity-client": ["../identity-client/src/index.ts", "../../packages/identity-client/src/index.ts"],
      "@ma/identity-client/*": ["../identity-client/src/*", "../../packages/identity-client/src/*"],
      "@ma/ui": ["../ui/src/index.ts", "../../packages/ui/src/index.ts"],
      "@ma/ui/*": ["../ui/src/*", "../../packages/ui/src/*"]
    }
  }
}
