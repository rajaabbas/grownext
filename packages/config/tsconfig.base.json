{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "lib": [
      "ES2022",
      "DOM",
      "DOM.Iterable"
    ],
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": false,
    "isolatedModules": true,
    "resolveJsonModule": true,
    "noEmit": true,
    "types": [
      "node"
    ],
    "paths": {
      "@ma/core": ["../core/src/index.ts"],
      "@ma/core/*": ["../core/src/*"],
      "@ma/contracts": ["../contracts/src/index.ts"],
      "@ma/contracts/*": ["../contracts/src/*"],
      "@ma/db": ["../db/src/index.ts"],
      "@ma/db/*": ["../db/src/*"],
      "@ma/ui": ["../ui/src/index.ts"],
      "@ma/ui/*": ["../ui/src/*"]
    }
  }
}
